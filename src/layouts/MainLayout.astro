---
import "../styles/style.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Topknap from "../components/Topknap.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <!-- europæisk sprog -->
    <meta charset="utf-8" />

    <!-- Det eks hvis man bruger safari - så browser ser ens ud-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Fortæller at det er et pesponsivt site -->
    <meta name="viewport" content="width=device-width" />

    <!-- SEO -->
    <meta name="description" content="sankeværktøjer til børn og unger, der ønsker at finde mad og krydderurter i naturen" />
    <meta name="author" content="Sebastian, Lucas, Jo, Ester" />
    <meta name="copyright" content="Team_19" />

    <!-- Den kommer ikke frem hos søgemaskiner -->
    <meta name="robots" content="noindex, nofollow" />

    <!-- fa-icon -->
    <link rel="icon" type="image/svg+xml" href="/cfl-logo.png" />

    <!-- FONTE - OPEN SANS TIL H WORK SANS TIL P-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <script src="https://kit.fontawesome.com/218df27a3a.js" crossorigin="anonymous"></script>
    <meta name="generator" content={Astro.generator} />

    <!-- titel på siden -->
    <title>{title}</title>
  </head><body id="top">
    <Navigation />
    <!-- <h1>{title}</h1> -->
    <Topknap />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
